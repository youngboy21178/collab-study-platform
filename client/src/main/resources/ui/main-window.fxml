<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>

<StackPane fx:id="rootPane"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.messenger.ui.controllers.MainWindowController"
           stylesheets="@css/theme.css, @css/main-window.css"
           styleClass="root dashboard-root">

    <children>
        <Pane fx:id="canvas" styleClass="dashboard-canvas">

            <StackPane fx:id="centerHalo" alignment="CENTER" styleClass="center-halo">
                <children>
                    <Label fx:id="greetingLabel" styleClass="center-greeting" alignment="CENTER" text="Welcome"/>
                </children>
            </StackPane>

            <Button fx:id="profileButton"   text="Profile"   styleClass="orbit-button"/>
            <Button fx:id="logoutButton"    text="Logout"    styleClass="orbit-button"/>
            <Button fx:id="tasksButton"     text="Tasks"     styleClass="orbit-button"/>
            <Button fx:id="materialsButton" text="Materials" styleClass="orbit-button"/>
            <Button fx:id="groupsButton"    text="Groups"    styleClass="orbit-button"/>
            <Button fx:id="chatsButton"     text="Chats"     styleClass="orbit-button"/>

            <Circle fx:id="tasksBadge" radius="7.0" fill="#ff2e2e" stroke="WHITE" strokeWidth="1.5" visible="false" mouseTransparent="true" />
            <Circle fx:id="groupsBadge" radius="7.0" fill="#ff2e2e" stroke="WHITE" strokeWidth="1.5" visible="false" mouseTransparent="true" />
            <Circle fx:id="chatsBadge" radius="7.0" fill="#ff2e2e" stroke="WHITE" strokeWidth="1.5" visible="false" mouseTransparent="true" />

        </Pane>
    </children>
</StackPane>