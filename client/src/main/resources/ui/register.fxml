<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>

<StackPane prefHeight="600.0" prefWidth="400.0"
           styleClass="root"
           stylesheets="@css/theme.css, @css/login-menu.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.messenger.ui.controllers.RegisterController">

    <children>
        <VBox alignment="CENTER" fillWidth="false" spacing="-40.0">
            <children>

                <StackPane styleClass="avatar-container">
                    <children>
                        <Circle radius="45.0" styleClass="avatar-bg" />
                        <SVGPath styleClass="avatar-icon" scaleX="1.8" scaleY="1.8"
                                 content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="-50.0" />
                    </VBox.margin>
                </StackPane>

                <VBox maxWidth="350.0" prefWidth="350.0" spacing="20.0"
                      styleClass="glass-card" pickOnBounds="false">
                    <padding>
                        <Insets top="70.0" right="30.0" bottom="40.0" left="30.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-box">
                            <children>
                                <SVGPath styleClass="input-icon"
                                         content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                                <TextField fx:id="nameField" promptText="Name" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-box">
                            <children>
                                <SVGPath styleClass="input-icon" content="M4 4h16v12H4V4zm0 0l8 6 8-6" />
                                <TextField fx:id="emailField" promptText="Email" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-box">
                            <children>
                                <SVGPath styleClass="input-icon"
                                         content="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v8c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2v-8c0-1.1-.9-2-2-2zm-6-3c1.66 0 3 1.34 3 3v2H9V8c0-1.66 1.34-3 3-3zm0 11.3c-1.16 0-2.1-.94-2.1-2.1 0-.82.47-1.53 1.2-1.87V11h1.8v1.33c.73.34 1.2 1.05 1.2 1.87 0 1.16-.94 2.1-2.1 2.1z" />
                                <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-box">
                            <children>
                                <SVGPath styleClass="input-icon"
                                         content="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v8c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2v-8c0-1.1-.9-2-2-2zm-6-3c1.66 0 3 1.34 3 3v2H9V8c0-1.66 1.34-3 3-3zm0 11.3c-1.16 0-2.1-.94-2.1-2.1 0-.82.47-1.53 1.2-1.87V11h1.8v1.33c.73.34 1.2 1.05 1.2 1.87 0 1.16-.94 2.1-2.1 2.1z" />
                                <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <Region VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>

                <VBox alignment="CENTER" maxWidth="300.0" prefWidth="300.0"
                      spacing="10.0" styleClass="glass-card-bottom">
                    <children>
                        <Label fx:id="errorLabel" textFill="#ff6b6b" wrapText="true" textAlignment="CENTER" maxWidth="280.0" visible="false" managed="false" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>

                        <Button fx:id="registerButton"
                                maxWidth="1.7976931348623157E308"
                                mnemonicParsing="false"
                                styleClass="login-button"
                                text="REGISTER"
                                onAction="#onRegister" />

                        <Hyperlink onAction="#onBackToLogin"
                                   styleClass="register-link"
                                   text="Already have an account? Login" />
                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</StackPane>